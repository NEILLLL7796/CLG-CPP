    for (i=0;i<=2;i++)
    {
        for(j=0;j<=2;j++)
        {
            cin>>p[i] [j];
        }
    }
    cout <<"enter the element of second matrix of order 3 x 3\n";
    for (i=0;i<=2;i++)
    {
        for(j=0;j<=2;j++)
